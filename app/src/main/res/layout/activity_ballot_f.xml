                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="A:"
                    android:layout_width="19sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteC1"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteC2"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="A:"
                    android:layout_width="19sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteD1"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteD2"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="A:"
                    android:layout_width="19sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteE1"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteE2"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="170sp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="A:"
                    android:layout_width="19sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteF1"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteF2"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="A:"
                    android:layout_width="19sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteG1"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteG2"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="A:"
                    android:layout_width="19sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteH1"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ballotF_ttVoteH2"
                    android:layout_weight="1"
